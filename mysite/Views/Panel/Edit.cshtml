@model PostViewModel

@{
}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label>Tags</label>
            <input class="form-control" asp-for="Tags" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <select class="form-control" asp-for="Category">
                <option value="Css">Css</option>
                <option value="Javascript">Javascript</option>
                <option value="Html">Html</option>
                <option value="Angular">Angular</option>
                <option value="Net-core">Net-core</option>
                <option value="Web-design">Web-design</option>
            </select>
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea id="editor" asp-for="Body"></textarea>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="btn btn-primary" asp-for="CurrentImage" type="hidden" />
            <input class="btn btn-info" asp-for="Image" />
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
    </form>
</div>

@section scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();


        //. -class
        //# - id
        //
    </script>
}

